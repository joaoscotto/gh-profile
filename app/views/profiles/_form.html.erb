<%= form_with model: profile, local: true do |form| %>
  <div class="mb-3">
    <%= form.label :name, class: "form-label text-light" %>
    <%= form.text_field :name, class: "form-control bg-dark", required: true %>
  </div>

  <div class="mb-3">
    <%= form.label :url, class: "form-label text-light" %>
    <%=
      form.url_field :url,
      class: "form-control bg-dark",
      required: true,
      pattern: "https?://.+",
      placeholder: "http://github.com/array"
    %>
  </div>

  <%= form.submit button_text, class: "btn btn-dark w-100" %>
<% end %>