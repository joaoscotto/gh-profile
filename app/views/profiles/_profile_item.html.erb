<div class="list-group-item list-group-item-dark">
  <div class="d-flex align-items-center justify-content-between">
    <div class="d-flex align-items-center gap-3">
      <%= image_tag profile.avatar_url, class: "rounded-circle", width: 50, height: 50 if profile.avatar_url.present? %>
        <div>
          <h5 class="mb-0 text-light"><%= profile.name %></h5>
          <small class="text-secondary">
            <%= link_to profile.short_url, profile.short_url, target: "_blank" %>
          </small>
        </div>
    </div>

    <div class="btn-group btn-group-sm" role="group">
      <button
        class="btn btn-dark"
        type="button"
        data-bs-toggle="collapse"
        data-bs-target="#details-<%= profile.id %>">
          View
      </button>

      <button
        class="btn btn-dark"
        type="button"
        data-bs-toggle="collapse"
        data-bs-target="#profile-edit-<%= profile.id %>">
          Edit
      </button>

      <%=
        button_to(
          "Delete",
          profile_path(profile, q: params[:q]),
          method: :delete, class: "btn btn-dark",
          form: { class: "btn-group btn-group-sm" }
        )
      %>
    </div>
  </div>

  <%= render 'profiles/profile_details', profile: profile %>
  <%= render 'profiles/edit_form', profile: profile %>
</div>